

<%= form_for(:user, :url => users_path, :html => { :id => "signup" }) do |f|  %>
  <h2>Sign Up</h2>
  <%= render 'error_messages', object: @new_user %> 
  <%= f.label(:first_name, 'First Name', :class => "label_width")%>
  <%= f.text_field(:first_name) %> 

  <%= f.label(:last_name, "Last Name", :class => "label_width") %>
  <%= f.text_field(:last_name) %>
  
  <%= f.label(:email, "Email", :class => "label_width") %>
  <%= f.text_field(:email) %>

  <%= f.label(:password, "Password", :class => "label_width") %>
  <%= f.password_field(:password) %>

  <%= f.label(:password_confirmation, "Password Confirmation", :class => "label_width") %>
  <%= f.password_field(:password_confirmation) %>
  
  <div class="submit">
    <%= f.submit("Sign Up", :class => "button") %>
  </div>
    
<% end %>

<%= form_for(:session, :url => sessions_path, :html => { :id => "login" }) do |f|  %>
  <h2>Log In</h2>
  <%= render 'error_messages', object: @user %> 
  
  <%= f.label(:login_email, "Email", :class => "label_width") %>
  <%= f.text_field(:login_email) %>
  
  <%= f.label(:login_password, "Password", :class => "label_width") %>
  <%= f.password_field(:login_password) %>
  
  <div class="submit">
     <%= f.submit("Log In", :class => "button") %>
  </div>
 
 <% end %> 
